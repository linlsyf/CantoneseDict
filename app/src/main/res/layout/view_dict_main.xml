<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/rootLayout"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:minHeight="550dp"
    android:orientation="vertical">

          <RelativeLayout
              android:layout_width="match_parent"
              android:id="@+id/startPerLayout"
              android:layout_height="wrap_content">

                  <ImageView
                      android:layout_width="match_parent"
                      android:src="@drawable/dict_home_head"
                      android:scaleType="fitXY"
                      android:layout_height="wrap_content" />
                  <TextView
                      android:layout_width="wrap_content"
                      android:text="@string/start_percent"
                      android:textSize="@dimen/txt_size"
                      android:layout_height="wrap_content" />
          </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:id="@+id/startLayout"
                    android:background="@color/yellow"

                    android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:lines="1"
                            android:id="@+id/imgStart"
                            android:textSize="17sp"
                            android:ellipsize="end"
                            android:layout_centerInParent="true"
                            android:src="@drawable/start"
                            android:textColor="@color/black"
                            android:layout_marginBottom="5dp"

                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:textSize="17sp"
                            android:layout_below="@id/imgStart"
                            android:text="@string/startLearn"
                            android:textColor="@color/black"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:id="@+id/translateLayout"
                    android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_weight="2"
                            android:background="@color/deep_blue"

                            android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="140dp"
                                    android:layout_height="140dp"
                                    android:lines="1"
                                    android:id="@+id/translateImg"
                                    android:textSize="17sp"
                                    android:ellipsize="end"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/translate"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="5dp"

                                    android:layout_gravity="center_horizontal"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                     android:layout_below="@id/translateImg"
                                    android:lines="1"
                                    android:gravity="center_horizontal"
                                    android:textSize="17sp"
                                    android:id="@+id/tvTranslate"
                                    android:text="@string/translate"
                                    android:textColor="@color/black"/>


                        </RelativeLayout>


                        <TextView
                            android:id="@+id/tvBase"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            android:textSize="16sp"
                            android:text="@string/learn_base_yp"
                            android:ellipsize="end"
                            android:background="@color/colorAccent"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                             />
                </LinearLayout>
        </LinearLayout>


</LinearLayout>