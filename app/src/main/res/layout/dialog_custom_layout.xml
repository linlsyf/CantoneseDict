<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/rootLayout"
    android:background="@drawable/white_corner_bg">
    
    <TextView 
        android:id="@+id/resend_ask_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:textSize="15sp"/>
    
    <View 
        android:id="@+id/resend_ask_title_line"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#a9a9a9"/>
    
    <FrameLayout 
        android:id="@+id/resend_ask_custom_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    
    <View 
        android:id="@+id/resend_ask_fl_line"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#a9a9a9"
        android:visibility="gone"/>
    
    <LinearLayout 
        android:id="@+id/resend_ask_btn_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/resend_ask_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/btn_cancel_pressed_selector"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="@string/cancel"/>
        
        <View 
            android:id="@+id/resend_ask_btn_line"
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="#a9a9a9"/>
        
        <TextView 
            android:id="@+id/resend_ask_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/btn_ok_pressed_selector"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="@string/confirm"/> 
               
    </LinearLayout>
    
</LinearLayout>
